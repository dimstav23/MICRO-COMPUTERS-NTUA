START:	LDA 2000H ;READ INPUT
		MOV D,A
     	MVI B,FFH	; B = -1

DECA:	INR B		; B <- B+1 (THE FIRST TIME ITS CALLED B BECOMES 0)
		SUI 0AH	; A <- A-10 
		JNC DECA	; IF A>0 JUMP TO DECA. IF NOT THEN B CONTAINS THE TENS OF THE INPUT
		ADI 0AH	; ADD 10 TO PROCCESS THE UNITS
		MOV C,A	; USE C REGISTER TO SAVE THE UNITS
		MVI A,00H	; A <-0 
		ADD B		; A <-B 
		RLC		; WE WANT THE TENS TO BE ANNOUNCED AT THE 4 MOST SIGNIFICANT BITS
		RLC		; TO ACHIEVE THAT WE ROTATE LEFT THE NUMBER FOR FOUR TIMES
		RLC
		RLC
		ADD C
						; WHEN ROTATION STOPS WE ADD THE UNITS AT REG A
     
		CMA		; LEDS USE COMPLEMENTERY LOGIC SO WE TAKE THE COMPLEMENT OF A
		STA 3000H	; LEDS "ON"
		
		MOV C,A		;STORE DECADES AND UNITS IN REG C 
    	MOV A,D		;RESTORE STARTING VALUE OF A
    	CPI 63H 	;IS INPUT>99?
    	JNC HUNDR	;IF INPUT>99 JUMP TO HUNDR
    	JMP START	; CONTINUOUS OPERATION
HUNDR: 
	MVI E,0FH
	MOV A,E
	STA 3000H
	LXI B,0F50H
	CALL DELB
	MVI E,F0H
	MOV A,E
	STA 3000H
	LXI B,0A60H
	CALL DELB
	LDA 2000H
	CMP D
	JNZ START
	JMP HUNDR
END:	END